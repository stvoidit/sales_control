{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "rootDir": "src/",
    "declaration": true,
  },
  "typeRoots": [
    "@types/node",
    "src/types"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
